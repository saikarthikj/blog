<form  style="width:610px;margin:0 auto;" {{action "postsubmit" on="submit"}}>
	<div class="input-group" style="width:300px;">
		<span class="input-group-addon">Title</span>
		{{input type="text" placeholder="Title" class="form-control" value=title valueBinding=title name="title" id="title"}}
	</div>
	<br/>
	<div style="width:600px;" class="input-group" >
		<span class="input-group-addon">Body</span>
		{{textarea name="article-body"   id="subject" value=subject}}
	</div>
	<br/>
	<div style="text-align:center">
		<button type="submit" class="btn btn-info "> Submit</button>
	</div>
</from>
<script>
		CKEDITOR.inline( 'article-body' );
</script>
